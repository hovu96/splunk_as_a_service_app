<form script="stack.js" stylesheet="stack.css">
  <label>Stack</label>
  <fieldset submitButton="false"></fieldset>
  <row>
    <panel id="status_panel">
      <single>
        <title>Status</title>
        <search>
          <query>| rest splunk_server=local services/saas/stack/$id$ | table status</query>
          <refresh>10s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="refresh.display">none</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
      <table>
        <search id="stack_config_search">
          <query>| rest splunk_server=local services/saas/stack/$id$ 
| table title cluster deployment_type
| untable _ param value
| table param value</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
      <html>
        <button id="rename-button" class="btn">Rename</button>
        <div id="rename-dialog" style="display: none">
          <div class="body">
            <p>
              Enter the new Stack title:
            </p>
            <p>
              <input type="text" name="title" value=""></input>
            </p>
          </div>
          <div class="footer">
            <button class="btn cancel" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary ok" data-dismiss="modal">Rename</button>
          </div>
        </div>
      </html>
    </panel>
    <panel id="endpoints_panel">
      <table>
        <title>Endpoints</title>
        <search>
          <query>| rest splunk_server=local services/saas/stack/$id$ | fields *_endpoint | rename *_endpoint as * | transpose 0 column_name="type" | rename "row 1" as url</query>
          <refresh>10s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <drilldown>
          <link target="_blank">
            <![CDATA[ $row.url|n$ ]]>
          </link>
        </drilldown>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">none</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Instances</title>
        <search>
          <query>index="em_meta" sourcetype="kube:objects:pods" "metadata.labels.for"="$id$" | dedup metadata.name | rex field=metadata.name ".*-(?&lt;id&gt;.+)$$" | rename metadata.labels.type as role status.phase as phase | eval last_seen=floor(((now()-_time)/60)%60) | eval last_seen=if(last_seen&gt;0,last_seen." mins ago","just now") | table role id phase last_seen | sort role id</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
          <refresh>10s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="phase">
          <colorPalette type="map">{"Running":#53A051,"Pending":#F8BE34}</colorPalette>
        </format>
      </table>
    </panel>
    <panel>
      <table>
        <title>Apps</title>
        <search>
          <query>| rest splunk_server=local services/saas/stack_apps/$id$ 
| fields - splunk_server 
| rename app_* as * 
| eval deploy_to = null() 
| foreach deploy_to_* 
    [ eval role_name = if(&lt;&lt;FIELD&gt;&gt;==1,"&lt;&lt;MATCHSTR&gt;&gt;",null()) 
    | eval deploy_to = mvappend(deploy_to,role_name) 
    | fields - role_name] 
| fields - deploy_to_* 
| table name version *</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_self">stack_app?stack=$id$&amp;name=$row.name$&amp;version=$row.version$&amp;back=stack</link>
        </drilldown>
      </table>
      <html>
        <button id="deploy-app-button" class="btn">Deploy App</button>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <title>Events</title>
      <input type="time" token="logs" searchWhenChanged="true">
        <label>Time</label>
        <default>
          <earliest>-4h</earliest>
          <latest>now</latest>
        </default>
      </input>
      <input type="dropdown" token="log_level_filter" searchWhenChanged="true">
        <label>Level</label>
        <choice value="eventtype=debug_level">Debug</choice>
        <choice value="eventtype=info_level">Info</choice>
        <choice value="eventtype=warning_level">Warning</choice>
        <choice value="eventtype=error_level">Error</choice>
        <default>eventtype=info_level</default>
        <initialValue>eventtype=info_level</initialValue>
      </input>
      <table>
        <search>
          <query>index=summary search_tag=stackoperation stack_id=$id$ $log_level_filter$ | table _time level msg | sort - _time</query>
          <earliest>$logs.earliest$</earliest>
          <latest>$logs.latest$</latest>
          <refresh>10s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="refresh.display">none</option>
        <format type="color" field="level">
          <colorPalette type="map">{"WARNING":#F8BE34,"INFO":#53FF51,"ERROR":#DC4E41,"DEBUG":#708794}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
</form>