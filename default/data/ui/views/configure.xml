<dashboard script="configure.js" stylesheet="configure.css">
  <label>Configure</label>
  <row>
    <panel>
      <title>Defaults</title>
      <html>
        <div class="form-horizontal">
          <splunk-control-group class="fix-label" label="Select Cluster" help="">	
            <splunk-search-dropdown class="setup_option" name="default_cluster" search="| rest splunk_server=local services/saas/clusters" value-field="name" label-field="name">
            </splunk-search-dropdown>
          </splunk-control-group>
          <splunk-control-group label="License Master Mode" help="">	
              <splunk-radio-input class="setup_option" name="default_license_master_mode">
                  <option value="url">URL</option>
                  <option value="file">File</option>
              </splunk-radio-input>
          </splunk-control-group>
          <splunk-control-group label="Deployment Type" help="">	
              <splunk-radio-input class="setup_option" name="default_deployment_type">
                  <option value="standalone">Standalone</option>
                  <option value="distributed">Distributed</option>
              </splunk-radio-input>
          </splunk-control-group>
          <splunk-control-group label="Number of Indexers" help="">
            <splunk-text-input name="default_indexer_count" class="setup_option">
            </splunk-text-input>
          </splunk-control-group>
          <splunk-control-group label="Indexer Scaling Mode" help="">	
              <splunk-radio-input class="setup_option" name="default_indexer_scaling_mode">
                  <option value="manual">Manual</option>
                  <option value="auto">Auto</option>
              </splunk-radio-input>
          </splunk-control-group>
          <splunk-control-group label="Maximum Number of Indexers" help="">
            <splunk-text-input name="default_max_indexer_count" class="setup_option">
            </splunk-text-input>
          </splunk-control-group>
          <splunk-control-group label="Number of Search Heads" help="">
            <splunk-text-input name="default_search_head_count" class="setup_option">
            </splunk-text-input>
          </splunk-control-group>
          <splunk-control-group label="Search Head Scaling Mode" help="">	
              <splunk-radio-input class="setup_option" name="default_search_head_scaling_mode">
                  <option value="manual">Manual</option>
                  <option value="auto">Auto</option>
              </splunk-radio-input>
          </splunk-control-group>
          <splunk-control-group label="Maximum Number of Search Head" help="">
            <splunk-text-input name="default_max_search_head_count" class="setup_option">
            </splunk-text-input>
          </splunk-control-group>
        </div>
      </html>
    </panel>
  </row>
  <row id="saveRow">
    <panel>
      <html>
        <div class="form-horizontal">
          <splunk-control-group label="" help="">
            <button id="setupButton" class="btn btn-primary">Save</button>
          </splunk-control-group>
        </div>
      </html>
    </panel>
  </row>
</dashboard>